<Window x:Class="TestAutocadJptMVVMGetPolylineLenght.Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestAutocadJptMVVMGetPolylineLenght"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="100"  WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainViewModel/>
        <!-- Устанавливаем DataContext -->
    </Window.DataContext>
    <Grid>
        <StackPanel MinHeight="100" MinWidth="50">
            <Button Content="Get Line Length" Command="{Binding GetLineLengthCommand}" />
            <TextBlock FontSize="24" Text="{Binding LineLength}"  HorizontalAlignment="Center"/>
        </StackPanel>
            
    </Grid>
</Window>
